{
  "compilerOptions": {
    "outDir": "./dist",                                  
    "module": "commonjs",                                
    "rootDirs": ["src", "tests"],
    "target": "es2019",                                  
    "esModuleInterop": true,
    "moduleResolution": "node",                            
    "forceConsistentCasingInFileNames": true,            
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": []
}
